    <!-- jQuery Version 1.11.1 -->
    <script src="../js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../js/bootstrap.min.js"></script>
    <script type="text/javascript">
        var app = angular.module('likeApp', []);
        app.controller("like", function ($scope, $http) {
            $http.get("/word/<%=doc._id%>").then(function(result) {
                console.log('start show word!!!');
                console.log(result);
                $scope.Post = result.data[0];
            }); 
            $scope.likeOrUnLike = function(){
                console.log('x');
                if($scope.Post.isLike == true){
                    $scope.Post.isLike = false;
                    $scope.Post.soLike--;
                    $http({
                        method : "POST",
                        url: "/unlikePost",
                        data: {id: $scope.Post.id },
                        headers: {'Content-Type': 'application/json'}
                    }).then(function(data){
                        console.log(data.data[0]);
                        $scope.Post = data.data[0];
                    })

                }else{
                    $scope.Post.isLike = true;
                    $scope.Post.soLike++;
                    $http({
                        method : "POST",
                        url: "/likePost",
                        data: {id: $scope.Post.id },
                        headers: {'Content-Type': 'application/json'}
                    }).then(function(data){
                        $scope.Post = data.data[0];
                    })
                }
            }
            $scope.delPosts = function(id,owner){
                console.log(id);
                $http({
                method : "DELETE",
                url: "/delPost",
                data: {id: id,owner:owner},
                headers: {'Content-Type': 'application/json'}
              }).then(function(data){
                $scope.myPosts = data.data;
                })
            }

        })
    </script>

</body>

