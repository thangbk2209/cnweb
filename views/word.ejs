                                    <th>
                                        <label ng-class="Post.isLike ? 'like-icon' : 'unlike-icon'" ng-click="likeOrUnLike()"> 
                                        <i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 
                                        </label>
                                    </th>

                                    <th><label> {{Post.soCmt }}</label></th>
