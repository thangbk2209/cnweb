    <script type="text/javascript">
        var app = angular.module('FollowApp', []);
        app.controller("follow", function ($scope, $http) {
            var i=0;
            $http.get("/yourPage/<%=user.username%>").then(function(result) {
                console.log('startaaa');
                console.log(result);
                $scope.myPosts = result.data[i];
                 if(result.data.length ==1){
                        $('.subnext').hide();
                    }  
                $('.subprev').hide();
            }); 
            $scope.delPosts = function(id,owner){
                console.log(id);
                $http({
                method : "DELETE",
                url: "/delPost",
                data: {id: id,owner:owner},
                headers: {'Content-Type': 'application/json'}
              }).then(function(data){
                $scope.myPosts = data.data;
                })
            }
            $scope.like = function(id,owner){
                console.log(id);
                console.log(owner);
                $http({
                method : "POST",
                url: "/likePostmyPage",
                data: {id: id, owner:owner},
                headers: {'Content-Type': 'application/json'}
              }).then(function(data){
                    console.log('data: ' +data.data);
                    $scope.myPosts = data.data;
                })
            }
            $scope.edit = function(title,content){
                console.log(title);
                console.log(content);
                $http({
                method : "POST",
                url: "/edit",
                data: {title: title, content:content},
                headers: {'Content-Type': 'application/json'}
              })
                // .then(function(data){
                //     console.log('data: ' +data.data);
                //     $scope.myPosts = data.data;
                // })
            }
            $scope.follow = function(followed){
                console.log(followed);
                $http({
                method : "POST",
                url: "/follow",
                data: {followed:followed},
                headers: {'Content-Type': 'application/json'}
              }).then(function(data){
                    console.log('data: ' +data.data);
                    // $scope.myPosts = data.data;
                })
            }
            $scope.next = function(){
                i++;
                console.log(i);
                // console.log(id);
                $http({
                method : "GET",
                url: "/yourPage/<%=user.username%>",
                data: {},
                headers: {'Content-Type': 'application/json'}
              }).then(function(data){
                    $scope.myPosts = data.data[i];
                    if(data.data.length ==1){
                        $('.subnext').hide();
                        $('.subprev').hide();
                    }
                    else{
                        if( i > 0 && i<data.data.length-1){
                            $('.subprev').show();
                            $('.subnext').show();
                        }
                        if(i == data.data.length-1) {
                            $('.subnext').hide();
                            $('.subprev').show();       
                        }
                    }
                })
            }
            $scope.prev = function(){
                i-=1;
                console.log(i);
                // console.log(id);
                $http({
                method : "GET",
                url: "/yourPage/<%=user.username%>",
                data: {},
                headers: {'Content-Type': 'application/json'}
              }).then(function(data){
                $scope.myPosts = data.data[i];
                    if( i > 0){
                        $('.subprev').show();
                        $('.subnext').show();
                    }
                    if(i== data.data.length-1) {
                        $('.subprev').show();
                        $('.subnext').hide();
                        
                    }
                    if(i==0){
                        $('.subprev').hide();
                        $('.subnext').show();
                    }
                })
            }
        })
    </script>

