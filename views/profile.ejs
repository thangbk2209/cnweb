    <!-- Page Content -->
    <div class="container">
    <!-- <div class="col-md-10 col-md-offset-1"> -->
      <label><h1>Update Profile</h1></label>
            <form action="/users/updateProfile" method="post">
                 <div class="form-group">
                    <div class="form-group">
                        <label >User name</label>
                        <input type="text" class="form-control" name="userName" placeholder='User name' value = ""/>
                    </div>
                    <div class="form-group">
                        <label >Put your image link for your avatar</label>
                        <input type="text" class="form-control" name="avatar" placeholder='Avatar' value = ""/>
                    </div>
                    <div class="form-group">
                        <label >City</label>
                        <input type="text" name="city" class="form-control" placeholder="City" value="" />
                    </div>
                    <div class="form-group">
                        <label >Age</label>
                        <input type="text" class="form-control" name="age" placeholder='Age' value = ""/>
                    </div>
                    <div class="form-group">
                        <label >Job</label>
                        <input type="text" class="form-control" name="job" placeholder='job' value = ""/>
                    </div>
            
                  <div>
                      <input type="submit" class=" form-control btn-info Update" value="Submit" />
                  </div>
                </form>
        <label><h1>Change Password</h1></label>
        <form action="/users/changePassword" method = "post">
            <div class="form-group">
                <label>Current Password</label>
                <input type="password" name="currentPassword" class="form-control" placeholder="Current Password"></input>
              </div>
            <div class="form-group">
              <label>New Password</label>
              <input type="password" name="newPassword" class="form-control" placeholder="New Password"></input>
            </div>
            <div>
                <input type="submit" class=" form-control btn-info Update" value="Save Changes" />
            </div>
          
        </form>
    </div>
    
